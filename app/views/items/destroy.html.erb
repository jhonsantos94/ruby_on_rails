<h1>Delete Item</h1>

<p>Are you sure you want to delete the item:</p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @item.quantity %>
</p>

<%= form_with(model: @item, method: :delete, local: true) do %>
  <div>
    <%= form.submit 'Delete Item', data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to 'Back', items_path %>
