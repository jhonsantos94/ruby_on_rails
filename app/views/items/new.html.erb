<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <h1>New Item</h1>

      <%= form_with(model: @item, local: true, class: "needs-validation") do |form| %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
          <% if @item.errors[:name].any? %>
            <div class="text-danger">
              <%= @item.errors[:name].first %>
            </div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %>
          <% if @item.errors[:description].any? %>
            <div class="text-danger">
              <%= @item.errors[:description].first %>
            </div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= form.label :quantity, class: "form-label" %>
          <%= form.number_field :quantity, class: "form-control" %>
          <% if @item.errors[:quantity].any? %>
            <div class="text-danger">
              <%= @item.errors[:quantity].first %>
            </div>
          <% end %>
        </div>

        <div>
          <%= form.submit 'Create Item', class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to 'Back', items_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
