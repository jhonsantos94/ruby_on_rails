<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <p>
        <strong>Name:</strong>
        <%= @item.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @item.description %>
      </p>

      <p>
        <strong>Quantity:</strong>
        <%= @item.quantity %>
      </p>

      <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-primary me-2" %>
      <%= link_to 'Back', items_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

